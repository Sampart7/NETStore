@page
@model RecordStore.UI.Pages.Admin.OrderManagementModel
@{
}

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <script src="~/js/admin/orders.js"></script>
}

<div id="app">
    <div v-if="selectedOrder === null">
        <div class="tabs is-centered">
            <ul>
                <li v-bind:class="{'is-active': status === 0}"><a v-on:click="status = 0">Pending</a></li>
                <li v-bind:class="{'is-active': status === 1}"><a v-on:click="status = 1">Packed</a></li>
                <li v-bind:class="{'is-active': status === 2}"><a v-on:click="status = 2">Shipped</a></li>
            </ul>
        </div>
        <div v-if="orders.length > 0">
            <p v-for="order in orders">
                <a v-on:click="selectOrder(order.id)">{{order.orderRef}} - {{order.email}}</a>
            </p>
        </div>
    </div>
    <div v-else>
        <p>
            <button v-on:click="exitOrder()">Exit</button>
        </p>
        <p class="title">{{selectedOrder.orderRef}}</p>
        <p class="subtitle">{{selectedOrder.email}}</p>
        <button v-on:click="updateOrder()">Process</button>
    </div>
</div>